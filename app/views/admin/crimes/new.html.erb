
<%= form_with(model: [:admin, @crime], local: true) do |form| %>

  <h1>Crear Delito</h1>
  <div class="actions">
    <div class="row">
      <div class="form-group col-10">
        <%= form.label :nombre %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>
    <%= form.submit 'Crear Delito', class: ["btn", "btn-primary"]  %>
    <%= link_to "Atras", admin_crimes_url, class: ["btn", "btn-secondary"] %>
  </div>
<% end %>
