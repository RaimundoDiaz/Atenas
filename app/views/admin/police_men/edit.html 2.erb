<%= form_with(model: [:admin, @police_man], local: true) do |form| %>
  <% if @police_man.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@police_man.errors.count, "error") %> prohibited this crime from being saved:</h2>

      <ul>
        <% @police_man.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h1>Editar Policia</h1>
  <div class="actions">
    <div class="row">
      <div class="form-group col-10">
        <%= form.label :nombre %>
        <%= form.text_field :name, class: "form-control"  %>
      </div>

      <div class="form-group col-10">
        <%= form.label :rut %>
        <%= form.text_field :rut, class: "form-control"  %>
      </div>

      <div class="form-group col-10">
        <%= form.label :numero_de_placa %>
        <%= form.text_field :badge, class: "form-control"  %>
      </div>
    </div>
    <%= form.submit 'Editar Policia', class: ["btn", "btn-primary"]  %>
    <%= link_to "Atras", admin_police_men_path, class: ["btn", "btn-secondary"] %>
  </div>
<% end %>