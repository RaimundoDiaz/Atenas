<%= form_with(model: [:admin, @local_prosecution], local: true) do |form| %>
  <% if @local_prosecution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@local_prosecution.errors.count, "error") %> prohibited this crime from being saved:</h2>

      <ul>
        <% @local_prosecution.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h1>Editar Fiscalía Local</h1>
  <div class="actions">
    <div class="row">
      <div class="form-group col-10">
        <%= form.label :nombre %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group col-10">
        <%= form.label :fiscalía_regional %>
        <%= form.collection_select(:regional_prosecution_id, RegionalProsecution.not_deleted.all, :id, :name, {}, { class: "form-control" }) %>
      </div>
    </div>
    <%= form.submit 'Editar Fiscalía Local', class: ["btn", "btn-primary"]  %>
    <%= link_to "Atras", admin_local_prosecutions_path, class: ["btn", "btn-secondary"] %>
  </div>
<% end %>