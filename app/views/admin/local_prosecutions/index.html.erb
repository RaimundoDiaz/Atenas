<div style="position: absolute; inset: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;" class="chartjs-size-monitor">
  <div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
    <div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0">

    </div>
  </div>
  <div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
    <div style="position:absolute;width:200%;height:200%;left:0; top:0">

    </div>
  </div>
</div>
<div id="content_box">
  <div class="container mt-3">
    <div>
      <h2 class="float-left">Fiscalías Locales</h2>
      <%= button_to "Crear Fiscalía Local", new_admin_local_prosecution_path, :method => :get, :class => "btn btn-primary text-white mb-2 float-right" %>
    </div>
    <input class="form-control" id="myInput" type="text" placeholder="Buscar Fiscalía Local..">
    <br>
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Nombre</th>
        <th>Fiscalía Regional</th>
        <th style="text-align: center; width: 18%">Acciones</th>
      </tr>
      </thead>
      <tbody id="myTable">
      <% @local_prosecutions.each do |local_prosecution| %>
        <tr>
          <td width="40%"><%= local_prosecution.name %></td>
          <td><%= local_prosecution.regional_prosecution.name %></td>
          <td><%= link_to 'Editar', edit_admin_local_prosecution_path(local_prosecution, :viene => false), :class => "float-left mr-2" %> <%= link_to 'Eliminar', admin_local_prosecution_path(local_prosecution), data: { confirm: "¿Estás seguro que quieres borrar esta fiscalía local? se borrarán todos los usuarios, procedimientos y fiscales vinculados a esta" }, method: :delete, :class => "float-right" %></td>
        </tr>

      <% end %>
      </tbody>
    </table>

  </div>
  <script>
      $(document).ready(function(){
          $("#myInput").on("keyup", function() {
              var value = $(this).val().toLowerCase();
              $("#myTable tr").filter(function() {
                  $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
              });
          });
      });
  </script>
</div>