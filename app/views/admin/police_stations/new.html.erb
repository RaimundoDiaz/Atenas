<%= form_with(model: [:admin, @police_station], local: true) do |form| %>

  <h1>Nueva Comisaría</h1>
  <div class="actions">
    <div class="row">
      <div class="form-group col-10">
        <%= form.label :nombre %>
        <%= form.text_field :name, class: "form-control"  %>
      </div>

      <div class="form-group col-10">
        <% prefecture = Prefecture.order(:name).map{|prefecture| [prefecture[:name], prefecture[:id]]} %>
        <%= form.label :prefecture_id, 'Prefactura:', class: "form-label mr-2" %>
        <%= form.select :prefecture_id, options_for_select(prefecture),{},{class: "form-control flex-grow-1"} %>
      </div>

      <div class="form-group col-10">
        <%= form.label :police_type, 'Tipo de Policia:', class: "form-label mr-2" %>
        <%= form.select :police_type, options_for_select([1,2,10]),{},{class: "form-control flex-grow-1"} %>
      </div>
    </div>
    <%= form.submit 'Crear Comisaría', class: ["btn", "btn-primary"]  %>
    <%= link_to "Atras", admin_police_stations_path, class: ["btn", "btn-secondary"] %>
  </div>
<% end %>