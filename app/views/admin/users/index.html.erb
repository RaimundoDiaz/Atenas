<div style="position: absolute; inset: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;" class="chartjs-size-monitor">
  <div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
    <div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0">

    </div>
  </div>
  <div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
    <div style="position:absolute;width:200%;height:200%;left:0; top:0">

    </div>
  </div>
</div>
<div id="content_box">
  <div class="container mt-3">
    <div>
      <h2 class="float-left">Usuarios</h2>
      <!--
      <%= button_to "Crear Administrador", new_admin_user_path, :method => :get, :class => "btn btn-primary text-white mb-2 float-right" %>
      -->
    </div>
    <input class="form-control" id="myInput" type="text" placeholder="Buscar Usuario..">
    <br>
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Email</th>
        <th style="width: 35%">Pertenece a</th>
        <th style="width: 15%;">Administrador</th>
        <th style="text-align: center; width: 18%">Acciones</th>
      </tr>
      </thead>
      <tbody id="myTable">
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <% unless user.police_unit.nil? %>
          <td><%= user.police_unit.name  %></td>
            <% role = 1 %>
          <%  end %>
          <% unless user.local_prosecution.nil? %>
            <td><%= user.local_prosecution.name  %></td>
            <% role = 2 %>
          <%  end %>
          <% if user.local_prosecution.nil? and user.police_unit.nil? %>
            <td>No aplica</td>
            <% role = 0 %>
          <%  end %>
          <td><%= user.admin ? 'Si' : 'No' %></td>
          <td><%= link_to 'Editar', edit_admin_user_path(user, role: role) %> <%= link_to 'Eliminar', admin_user_path(user), method: :delete, data: { confirm: "¿Estás seguro que quieres borrar este usuario?" }, :class => "float-right"%></td>
        </tr>

      <% end %>
      </tbody>
    </table>

  </div>
  <script>
      $(document).ready(function(){
          $("#myInput").on("keyup", function() {
              var value = $(this).val().toLowerCase();
              $("#myTable tr").filter(function() {
                  $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
              });
          });
      });
  </script>
</div>