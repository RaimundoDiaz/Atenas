<%= form_with(model: [:admin, @user], local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p class="font-italic mt-4">Account information</p>
  <div class="actions">
    <div class="row">
      <div class="form-group col-10">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-control" %>
      </div>
      <div class="form-group col-10">
        <%= form.label :Password %>
        <%= form.password_field :password, class: "form-control", autocomplete: "password", placeholder:"New Password" %>
      </div>
      <div class="form-group col-10">
        <%= form.label :admin %>
        <%= form.check_box :admin %>
      </div>
    </div>


    <%= form.submit class: ["btn", "btn-primary"] %>
    <%= link_to "Back", admin_users_path, class: ["btn", "btn-secondary"] %>
  </div>
<% end %>
