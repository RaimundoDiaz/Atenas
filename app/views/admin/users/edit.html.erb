<%= form_with(model: [:admin, @user], local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h1>Editar Usuario</h1>
  <div class="actions">
    <div class="row">
      <div class="form-group col-10">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-control" %>
      </div>
      <div class="form-group col-10">
        <%= form.label :Contraseña %>
        <%= form.password_field :password, class: "form-control", autocomplete: "password", placeholder:"Nueva Contraseña" %>
        <small id="emailHelp" class="form-text text-muted">Ingrese una contraseña solo si quiere cambiarla.</small>
      </div>

      <% if action_name == "edit" %>
        <div class="form-group col-10">
          <% if params[:role] == "1" %>
            <%= form.label :police_unit %>
            <%= form.collection_select(:police_unit_id, PoliceUnit.all, :id, :name, {}, { class: "form-control" }) %>
          <% elsif params[:role] == "2" %>
            <%= form.label :local_prosecution %>
            <%= form.collection_select(:local_prosecution_id, LocalProsecution.all, :id, :name, {}, { class: "form-control" }) %>
          <%end %>
          <%= hidden_field_tag(:role, params[:role]) %>
        </div>
      <% end %>
      <!--
      <div class="form-group col-10">
        <%= form.label :administrador %>
        <%= form.check_box :admin %>
      </div>
      -->
    </div>

    <%= form.submit "Editar", class: ["btn", "btn-primary"] %>
    <%= link_to "Atras", admin_users_path, class: ["btn", "btn-secondary"] %>
  </div>
<% end %>
