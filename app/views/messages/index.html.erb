<p id="notice"><%= notice %></p>

<div id="content_box">

  <h1>Mensajes del Procedimiento <%= @procedure.id %></h1>

  <% @messages.each do |message| %>
    <div class="messageBox">
      <div class="topMessageBox">
        <% if (message.user.police_unit != nil) %>
          <%= message.user.police_unit.name %>
        <% elsif (message.user.local_prosecution != nil) %>
          <%= message.user.local_prosecution.name %>
        <% end %>

        <span class="dateSide"><%= message.created_at %></span>
      </div>

      <div class="bottomMessageBox">
        <%= message.content %>
      </div>
    </div>
  <% end %>


