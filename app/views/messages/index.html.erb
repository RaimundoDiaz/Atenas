<p id="notice"><%= notice %></p>

<h1>Mensajes del Procedimiento <%= @messages.first.procedure.id %></h1>

<table>
  <thead>
    <tr>
      <th>Institution</th>
      <th>Sender</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <%if (message.user.police_unit != nil)%>
          <td><%= message.user.police_unit.name %></td>
        <%elsif (message.user.local_prosecution!= nil) %>
          <td><%= message.user.local_prosecution.name %></td>
        <%end %>
        <td><%= message.user.email %></td>
        <td><%= message.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_procedure_message_path %>
