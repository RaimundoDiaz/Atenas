<div id="content_box_center" >

  <h2 class="pl-10 pr-10">Procedimiento XX</h2>

  <h3>Datos del procedimiento:</h3>

  <p>
    <strong>Estado:</strong>
    <% if @procedure.pending? %>
    Pendiente
    <% elsif @procedure.acd?%>
    Audiencia control de detención
  <% elsif @procedure.noticed? %>
    Apercibido
      <% end %>
  </p>

  <p>
    <strong>Fecha:</strong>
    <%= @procedure.created_at_str %>
  </p>

  <p>
    <strong>Unidad policial:</strong>
    <%= @procedure.police_unit_in_charge_id %>
  </p>

  <p>
    <strong>Carabinero a cargo:</strong>
    <%= @procedure.police_in_charge_id %>
  </p>

  <p>
    <strong>Fiscalia Local:</strong>
    <%= @procedure.local_prosecution_in_charge_id %>
  </p>

  <p>
    <strong>Fiscal a cargo:</strong>
    <%= @procedure.prosecutor_in_charge_id %>
  </p>

  <p>
    <strong>Región:</strong>
    <%= @procedure.region %>
  </p>

  <p>
    <strong>Comuna:</strong>
    <%= @procedure.sector %>
  </p>

  <p>
    <strong>Dirección:</strong>
    <%= @procedure.address %>
  </p>

  <h3>Datos delictuales:</h3>
  <p>
    <strong>Clasificación:</strong>
    <% if @procedure.flagrancy? %>
      Flagrancia
    <% elsif @procedure.pending_arrest_warrant? %>
      Orden de detención pendiente
    <% elsif @procedure.both? %>
      Flagrancia y Orden de detención pendiente
    <% end %>
  </p>

  <p>
    <strong>Marcas:</strong>
    <% @procedure.tags.each do |tag| %>
      <span class="badge badge-pill badge-primary"><%= tag.name %></span>
    <% end %>
  </p>

  <p>
    <strong>Relato:</strong>
    <%= @procedure.story %>
  </p>

  <h3>Datos de involucrados:</h3>
  <h4>Imputados</h4>
  <% @accuseds.each do |accused| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= accused.name %> <%= accused.last_name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= accused.rut %></h6>
        <a href="#" class="card-link">Another link</a>
      </div>
    </div>
  <% end %>

  <h4>Victimas</h4>
  <% @victims.each do |victim| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= victim.name %> <%= victim.last_name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= victim.rut %></h6>
        <a href="#" class="card-link">Another link</a>
      </div>
    </div>
  <% end %>

  <h4>Testigos</h4>
  <% @witnesses.each do |witness| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= witness.name %> <%= witness.last_name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= witness.rut %></h6>
        <a href="#" class="card-link">Another link</a>
      </div>
    </div>
  <% end %>

  <%= link_to 'Back', procedures_path() %>

</div>